<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Prices - Control Panel</title>
  <link rel="stylesheet" href="assets/web/assets/mobirise-icons/mobirise-icons.css">
  <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="assets/bootstrap/css/bootstrap-grid.min.css">
  <link rel="stylesheet" href="assets/bootstrap/css/bootstrap-reboot.min.css">
  <link rel="stylesheet" href="assets/dropdown/css/style.css">
  <link rel="stylesheet" href="assets/theme/css/style.css">
  <link rel="preload" as="style" href="/assets/mobirise/css/mbr-additional.css">
  <link rel="stylesheet" href="assets/mobirise/css/mbr-additional.css" type="text/css">
</head>
<body>
  {{>navbar}}
  <section class="features5 popup-btn-cards cid-rJfCoFRV5C" id="features5-c">
    <div class="container-fluid">
      <h2 class="mbr-section-title align-center mbr-fonts-style display-2">Edit Prices</h2>
      <div class="underline align-center">
        <div class="line"></div>
      </div>
      <h3 class="mbr-section-subtitle display-5 align-center mbr-fonts-style mbr-light pt-1 pb-1 faded">Enter Product ID, Purchase Price, and Rent Price</h3>
      <form action="/pricechange" method="post">
      <div class="form-group col-lg-3 mx-auto">
        <input type="text" class="form-control" name="productID" aria-describedby="productidHelp" placeholder="Product ID"required>
      </div>
      <div class="form-group col-lg-3 mx-auto">
        <input type="text" class="form-control" name="purchasePrice" aria-describedby="PurchasePriceHelp" placeholder="Purchase Price"required>
      </div>
      <div class="form-group col-lg-2 mx-auto">
        <input type="text" class="form-control" name="rentPrice" aria-describedby="RentPriceHelp" placeholder="Rent Price Per Day"required>
      </div>
      <center>
        <button type="submit" class="btn btn-info">Change Price</button>
      </center>
    </form>
    </div>
  </section>
  {{>pricesdisplay}}
  {{>logoutfooter}}
  <script src="assets/web/assets/jquery/jquery.min.js"></script>
  <script src="assets/popper/popper.min.js"></script>
  <script src="assets/bootstrap/js/bootstrap.min.js"></script>
  <script src="assets/smoothscroll/smooth-scroll.js"></script>
  <script src="assets/dropdown/js/nav-dropdown.js"></script>
  <script src="assets/dropdown/js/navbar-dropdown.js"></script>
  <script src="assets/touchswipe/jquery.touch-swipe.min.js"></script>
  <script src="assets/mbr-popup-btns/mbr-popup-btns.js"></script>
  <script src="assets/datatables/jquery.data-tables.min.js"></script>
  <script src="assets/datatables/data-tables.bootstrap4.min.js"></script>
  <script src="assets/theme/js/script.js"></script>
</body>
</html>
